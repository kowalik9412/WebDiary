<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/login.css">

</head>

<body>

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <div class="fadeIn first">
                <h2>Reset Password</h2>
                <%- include('../includes/errors.ejs') %>
            </div>
            <form action="/auth/reset" method="POST">
                <input type="text" id="login" class="fadeIn second" name="email" placeholder="example@gmail.com" ">
                <input type="submit" class="fadeIn fourth" value="Reset Password">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </form>
            <div id="formFooter">
                <a class="underlineHover" href="/auth/register">Don't you have an account? Sign Up!</a>
            </div>

        </div>
    </div>
    <%- include('../includes/footer.ejs') %>