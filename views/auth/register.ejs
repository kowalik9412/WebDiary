<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/login.css">

</head>

<body>

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <div class="fadeIn first">
                <h2>Register</h2>
                <%- include('../includes/errors.ejs') %>
            </div>
            <form action="/auth/register" method="POST">
                <input type="text" id="login" class="fadeIn second" name="email" placeholder="example@gmail.com" ">
                <input type="password" id="password" class="fadeIn third" name="password" placeholder="password">
                <input type="password" id="password2" class="fadeIn third" name="password2" placeholder="password">
                <input type="submit" class="fadeIn fourth" value="Sign Up">
            </form>
            <div id="formFooter">
                <a class="underlineHover" href="#">Do you have an account? Log In!</a>
            </div>

        </div>
    </div>
    <%- include('../includes/footer.ejs') %>